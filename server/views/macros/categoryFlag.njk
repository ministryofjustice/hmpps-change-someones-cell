{% macro categoryFlag(categoryText, categoryCode, default = true) %}
  {% set classes = 'govuk-!-margin-bottom-1 dps-cat-a-tag' if categoryCode in ['A', 'E', 'H', 'P'] %}
  {% set text %}
    {% if categoryCode in ['A', 'E'] %}
      Cat A
    {% elif categoryCode === 'H' %}
      Cat A High
    {% elif categoryCode === 'P' %}
      Cat A Prov
    {% else %}
      {% if default %}
        {{ categoryText | showDefault('Not entered') }}
      {% else %}
        {{ categoryText }}
      {% endif %}
    {% endif %}
  {% endset %}

  <span class="{{ classes | lower }}">
    {{ text }}
  </span>
{% endmacro %}
